{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "paths": {
      "react": ["./node_modules/@types/react"]
    },
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["index.ts", "vite.config.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  }
}
